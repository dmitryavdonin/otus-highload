FROM python:3.11-slim

WORKDIR /app

COPY services/counter/requirements.txt requirements.txt
RUN pip install --no-cache-dir -r requirements.txt \
    && apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

COPY . .

CMD ["uvicorn", "services.counter.app.main:app", "--host", "0.0.0.0", "--port", "8003"]


