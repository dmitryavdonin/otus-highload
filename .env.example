# Настройки сервера
HOST=0.0.0.0
PORT=8001
DEBUG=false

# Настройки базы данных
DATABASE_URL=postgresql+asyncpg://user:password@localhost/social_network
DATABASE_SLAVE_URL=postgresql+asyncpg://user:password@localhost/social_network_slave

# Настройки Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# Настройки RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE=social_network
RABBITMQ_QUEUE_FEED_UPDATES=feed_updates

# Настройки WebSocket
WS_MAX_CONNECTIONS_PER_USER=3
WS_HEARTBEAT_INTERVAL=30
WS_CONNECTION_TIMEOUT=300

# Настройки обработчика знаменитостей
CELEBRITY_THRESHOLD=1000
CELEBRITY_BATCH_SIZE=100
CELEBRITY_BATCH_DELAY=0.1

# Настройки безопасности
JWT_SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Настройки логирования
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Настройки CORS (разделенные запятыми)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Настройки мониторинга
ENABLE_METRICS=true
METRICS_PORT=8002 